{
  "name": "react-pure-css-loaders",
  "version": "1.0.0",
  "description": "react components wrapper of pure css loaders",
  "main": "dist/bundle.js",
  "module": "dist/bundle.esm.js",
  "unpkg": "dist/bundle.min.js",
  "sideEffects": [
    "*.css"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "rollup -c",
    "lint": "eslint '**/**/*.js'",
    "lint:fix": "prettier-eslint --write $PWD/'**/**/*.js'",
    "storybook": "start-storybook",
    "storybook:build": "build-storybook",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sandylib/react-pure-css-loaders.git"
  },
  "keywords": [
    "react",
    "react-hook",
    "css",
    "spinners",
    "loaders",
    "pure css loaders"
  ],
  "author": "Sandy.Z",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sandylib/react-pure-css-loaders/issues"
  },
  "homepage": "https://github.com/sandylib/react-pure-css-loaders#readme",
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-react": "^7.7.4",
    "@rollup/plugin-node-resolve": "^6.1.0",
    "@storybook/addon-actions": "^5.2.8",
    "@storybook/addon-knobs": "^5.2.8",
    "@storybook/addon-notes": "^5.2.8",
    "@storybook/addons": "^5.2.8",
    "@storybook/react": "^5.2.8",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jest": "^23.3.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "prettier-eslint": "^9.0.1",
    "prettier-eslint-cli": "^5.0.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-test-renderer": "^16.12.0",
    "rimraf": "^3.0.0",
    "rollup": "^1.28.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-string": "^3.0.0",
    "rollup-plugin-terser": "^5.1.3"
  },
  "peerDependencies": {
    "react": "^16.12.0"
  },
  "engines": {
    "node": ">=12"
  },
  "dependencies": {
    "styled-components": "^4.4.1"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css)$": "<rootDir>/__mocks__/styleMock.js"
    }
  }
}
